<MyComponent
  @description={{if
    this.someCondition
    (t
      "my-component.description.version-1"
      installedOn=this.installationDate
      packageName="ember-source"
      packageVersion="6.0.0"
    )
    (t
      "my-component.description.version-2"
      (hash
        installedOn=this.installationDate
        packageName="ember-source"
        packageVersion="6.0.0"
      )
    )
  }}
  @title="Update history"
/>

