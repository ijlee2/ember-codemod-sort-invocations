{{! Ideal case }}
<Ui::Button
  @label="Submit form"
  @type="submit"
  data-test-button
  {{on "click" this.doSomething}}
  ...attributes
/>

{{! Angle bracket syntax }}
<Ui::Button
  @label="Submit form" @type="submit" data-test-button {{on "click" this.doSomething}} ...attributes
/>

<Ui::Button
  @type="submit" data-test-button={{""}} {{on "click" this.doSomething}} ...attributes
>
  Submit form
</Ui::Button>

{{! Curly brace syntax }}
{{ui/button
  data-test-button=""
  label="Submit form"
  onclick=this.doSomething
  type="submit"
}}

{{#ui/button
  data-test-button=""
  onclick=this.doSomething
  type="submit"
}}
  Submit form
{{/ui/button}}