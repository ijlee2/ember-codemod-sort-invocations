{{! Ideal case }}
<Ui::Button
  @label="Submit form"
  @type="submit"
  data-test-button
  {{on "click" this.doSomething}}
  ...attributes
/>

{{! Angle bracket syntax }}
<Ui::Button
  {{on "click" this.doSomething}}
  @type="submit"
  ...attributes
  data-test-button
  @label="Submit form"
/>

<Ui::Button
  {{on "click" this.doSomething}}
  @type="submit"
  ...attributes
  data-test-button=""
>
  Submit form
</Ui::Button>

{{! Curly brace syntax }}
{{ui/button
  onclick=this.doSomething
  type="submit"
  data-test-button=""
  label="Submit form"
}}

{{#ui/button
  onclick=this.doSomething
  type="submit"
  data-test-button=""
}}
  Submit form
{{/ui/button}}