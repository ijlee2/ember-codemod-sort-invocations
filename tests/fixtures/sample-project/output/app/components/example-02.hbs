{{! Ideal case }}
<Ui::Button
  @label="Submit form" @type="submit" data-test-button ...attributes {{on "click" this.doSomething}}
/>

{{! Angle bracket syntax }}
<Ui::Button
  @label="Submit form" @type="submit" data-test-button ...attributes {{on "click" this.doSomething}}
/>

<Ui::Button
  @type="submit" data-test-button ...attributes {{on "click" this.doSomething}}
>
  Submit form
</Ui::Button>

{{! Curly brace syntax }}
{{ui/button
  onclick=this.doSomething
  type="submit"
  data-test-button=""
  label="Submit form"
}}

{{#ui/button
  onclick=this.doSomething
  type="submit"
  data-test-button=""
}}
  Submit form
{{/ui/button}}